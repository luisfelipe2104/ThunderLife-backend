generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  email String @unique
  password String
}

model Habit {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  habitName String
  habitDescription String?
  habitGoal String
}

model Streak {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  habit_id String
  user_id String
  date String
  comment String?
  status String
}

model ToDo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  toDoName String
  status String
  scheduledHour String
  doneHour String
  toDoDescription String
}
